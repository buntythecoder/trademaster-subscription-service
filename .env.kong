# Kong Gateway Configuration Environment Variables for Subscription Service
# Copy this file to .env and update with your actual secrets

# JWT Secrets (Base64 encoded or plain text)
TRADEMASTER_SUBSCRIPTION_JWT_SECRET=subscription-jwt-secret-change-in-production-123456789
TRADEMASTER_SUBSCRIPTION_ADMIN_JWT_SECRET=subscription-admin-jwt-secret-change-in-production-987654321

# API Keys for Admin and Monitoring
TRADEMASTER_SUBSCRIPTION_ADMIN_API_KEY=trademaster-subscription-admin-key-12345
TRADEMASTER_SUBSCRIPTION_MONITOR_API_KEY=trademaster-subscription-monitor-key-67890

# Internal Service-to-Service API Keys
TRADEMASTER_TRADING_SERVICE_API_KEY=trademaster-trading-service-key-abcde
TRADEMASTER_NOTIFICATION_SERVICE_API_KEY=trademaster-notification-service-key-fghij
TRADEMASTER_BILLING_SERVICE_API_KEY=trademaster-billing-service-key-klmno

# Kong Database Configuration (if using DB mode)
KONG_PG_HOST=postgres
KONG_PG_PORT=5432
KONG_PG_USER=kong
KONG_PG_PASSWORD=kong-password-change-me
KONG_PG_DATABASE=kong

# Kong Configuration
KONG_ADMIN_LISTEN=0.0.0.0:8001
KONG_PROXY_LISTEN=0.0.0.0:8000
KONG_DATABASE=postgres
KONG_PLUGINS=bundled,cors,rate-limiting,jwt,key-auth,prometheus,http-log,correlation-id,ip-restriction,request-size-limiting,response-ratelimiting

# SSL Certificate paths (if using HTTPS)
KONG_SSL_CERT_PATH=/etc/kong/ssl/subscription-service.crt
KONG_SSL_KEY_PATH=/etc/kong/ssl/subscription-service.key

# Logging Configuration
KONG_LOG_LEVEL=info
KONG_ACCESS_LOG=/tmp/access.log
KONG_ERROR_LOG=/tmp/error.log

# Performance Tuning
KONG_NGINX_WORKER_PROCESSES=auto
KONG_NGINX_DAEMON=off
KONG_MEM_CACHE_SIZE=128m